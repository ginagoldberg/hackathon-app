<h1>Tips</h1>


<% @tips.each do |tip| %>
<div class="card">
  <div class="card-body">
    <div class="card-section">
      <h3><%= tip.title %></h3>
      <p><%= tip.content %></p>
    </div>

    <div class="card-aside">
      <div class="card-section">

       Score: <%= tip.score %>

       <!-- Add comment, this does not have correct functionality but is for demo purposes -->
       <%= link_to 'Comment', edit_tip_path(tip) %>
       <%= link_to 'X', tip, method: :delete, data: { confirm: 'Are you sure?' } %>


         <%= link_to image_tag("like.png"), like_tip_path(tip), method: :put %>
       <%= link_to image_tag("dislike.png"),  dislike_tip_path(tip), method: :put %>

     </div>
   </div>
 </div>
</div>
<% end %>

<br>

<%= link_to '+', new_tip_path %>
